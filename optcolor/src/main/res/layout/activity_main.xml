<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kunkun.optcolor.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/haomeizi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Vibrant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Vibrant" />

        <TextView
            android:id="@+id/Vibrantdark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="dark" />

        <TextView
            android:id="@+id/Vibrantlight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="light" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Muted"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Muted" />

        <TextView
            android:id="@+id/Muteddark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Muted" />

        <TextView
            android:id="@+id/Mutedlighr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Muted" />
    </LinearLayout>


</LinearLayout>
